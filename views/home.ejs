<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Users List</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f7f9fc;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: flex-start;
      padding: 2rem 0;
    }

    .container {
      background: white;
      width: 90%;
      max-width: 800px;
      border-radius: 10px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.1);
      padding: 2rem;
    }

    h2 {
      text-align: center;
      margin-bottom: 1.5rem;
      color: #333;
    }

    .search-bar {
      display: flex;
      justify-content: center;
      margin-bottom: 1.5rem;
    }

    .search-bar input {
      width: 100%;
      max-width: 400px;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px 0 0 5px;
      font-size: 1rem;
    }

    .search-bar button {
      background: #007bff;
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 0 5px 5px 0;
      cursor: pointer;
      font-weight: bold;
      transition: background 0.3s;
    }

    .search-bar button:hover {
      background: #0056b3;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 1rem;
    }

    th, td {
      padding: 12px 10px;
      border-bottom: 1px solid #eee;
      text-align: left;
      font-size: 0.95rem;
    }

    th {
      background-color: #f0f4f8;
      color: #333;
    }

    tr:hover {
      background-color: #f9fbff;
    }

    .no-users {
      text-align: center;
      color: #888;
      padding: 1rem 0;
    }

    .btn {
      display: inline-block;
      background: #007bff;
      color: #fff;
      border: none;
      padding: 6px 10px;
      border-radius: 5px;
      cursor: pointer;
      font-size: 0.85rem;
      font-weight: bold;
      text-decoration: none;
    }

    .btn:hover {
      background: #0056b3;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2>User Management</h2>

    <form class="search-bar" method="GET" action="/">
      <input type="text" name="search" placeholder="Search users by name or email..." value="<%= typeof search !== 'undefined' ? search : '' %>">
      <button type="submit">Search</button>
    </form>

    <% if (users.length > 0) { %>
      <table>
        <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>Email</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach((user, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= user.toJSON().firstName %></td>
              <td><%= user.toJSON().email %></td>
              <td>
                <a href="/users/<%= user.id %>" class="btn">View</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <div class="no-users">No users found.</div>
    <% } %>
  </div>
</body>
</html>
